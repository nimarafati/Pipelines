#Merge expression values generated by featurecounts  
```{r, eval = F ,echo = T}
path <- '~/SMS_5123_20_AM_fungi_annotation/'
samples <- read.table(paste0(path, 'code/Samples_reads.txt'))
colnames(samples) <- c('Sample', 'R1', 'R2')
cntr <- 1

for(s in samples$Sample){
  tmp_featurecounts <- read.table(paste0(path, 'intermediate/featureCounts/STAR/',s,'/count-s-2'), header = T, skip = 1)
  if(cntr == 1){
    data_raw <- data.frame(tmp_featurecounts[,1], matrix(0,nrow=, nrow(tmp_featurecounts), ncol=nrow(samples), byrow = T))
    colnames(data_raw) <- c('gene_id',as.character(samples$Sample_Lane))
  }else{
    data_raw[, as.character(s)] <- tmp_featurecounts[,7]
  }
  cat('\r', paste0(cntr,": ", as.character(s)))
  cntr <- cntr + 1
}
write.table(data_raw, paste0(path,'intermediate/featureCounts/STAR/merged_gene_counts.txt'), col.names = T, row.names = F, quote = F, sep = '\t')
```
